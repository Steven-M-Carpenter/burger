<div class="container">
    <div class="row">
        <header class="col-sm-12">
            <h1 class="text-center" id="PageTitle">Eat Da Burger</h1>
        </header>
        {{!-- <svg id="myCanvas" width=100% height="100"> --}}
        <img id="BurgerImg1" src="assets/images/Anonymous-burger.svg" alt="Picture of a burger">
        <img id="BurgerImg2" src="assets/images/Anonymous-burger.svg" alt="Picture of a burger">
        {{!-- </svg> --}}
    </div>
    <div class="row">
        <div class="col-sm-1">
        </div>
        <div class="col-sm-4">
            <h2 class="text-center" id="BurgerWait">Burgers waiting for you</h2>
        </div>
        <div class="col-sm-2">
        </div>
        <div class="col-sm-4">
            <h2 class="text-center" id="BurgerAte">Burgers you have eaten</h2>
        </div>
        <div class="col-sm-1">
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1">
        </div>
        <div class="col-sm-4">
            {{!-- <ul id="ListWait">
